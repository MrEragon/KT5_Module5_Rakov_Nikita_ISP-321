<Page x:Class="WpfApp1.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ИС по прокату спортивного инвентаря - Авторизация">

    <Grid VerticalAlignment="Center">
        <StackPanel>
            <Label Content="Логин" ></Label>
            <TextBox x:Name="LoginBox"></TextBox>
            <Label Content="Логин"></Label>
            <PasswordBox x:Name="PasswordTextBox"></PasswordBox>
            <Button x:Name="LoginButton" Content="Войти" Margin="0,10,0,0" Click="LoginButton_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
